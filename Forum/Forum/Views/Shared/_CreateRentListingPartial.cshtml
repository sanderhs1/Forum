@model CreateRentListingViewModel

<!-- Endre sånn at ListingId velges automatisk og sånn at man ikke trenger å skrive den-->
<h2>Rent this Listing!</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Rent" asp-action="CreateRentListing">
    <div class="form-group">
        <input asp-for="RentListing.ListingId" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="RentListing.RentId">Select Rent ID</label><span class="text-danger">*</span>
        <select asp-for="RentListing.RentId" asp-items="Model.RentSelectList" class="form-control">
            <option value="">Select an order...</option>
        </select>
        <span asp-validation-for="RentListing.RentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RentListing.DaysStayed">How many days are you staying?</label><span class="text-danger">*</span>
        <input asp-for="RentListing.DaysStayed" class="form-control" type="number" min="1" />
        <span asp-validation-for="RentListing.DaysStayed" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Rent</button>
</form>