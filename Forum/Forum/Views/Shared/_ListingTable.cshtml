@model IEnumerable<Listing>


    <!--Endre sånn at det ser bedre ut, bare rough forslag-->
<style>
    .listing-box {
        border: 1px solid #ccc;
        margin-bottom: 20px;
        display: flex;
        height: 230px; /* Set the fixed height for the box */
    }

    .listing-image {
        flex: 1;
        overflow: hidden; /* Clip content that exceeds the fixed height */
        margin-right: 10px; /* Add margin to the right side of the image */
    }

        .listing-image img {
            max-width: 100%;
            max-height: 100%;
        }

    .listing-details {
        flex: 1;
        overflow: hidden; /* Clip content that exceeds the fixed height */
    }
</style>

<div class="container">
    @foreach (var listing in Model)
    {
        <div class="listing-box">
            <div class="listing-image">
                <img src="@listing.ImageUrl" alt="Listing Image" />
            </div>
            <div class="listing-details">
                <div>
                    <strong>ListingId:</strong> @listing.ListingId
                </div>
                <div>
                    <strong>Name:</strong> <a asp-controller="Listing" asp-action="Description" asp-route-id="@listing.ListingId">@listing.Name</a>
                </div>
                <div>
                    <strong>Price:</strong> @listing.Price.ToString("0.00 NOK")
                </div>
                <div>
                    <strong>Description:</strong> @listing.Description
                </div>
            </div>
            <div class="action-links">
                <a asp-action="Update" asp-route-id="@listing.ListingId">Update</a>
                <a asp-action="Delete" asp-route-id="@listing.ListingId">Delete</a>
            </div>
        </div>
    }
    <p>
        <a class="btn btn-secondary" asp-controller="Listing" asp-action="Create">Create new Listing</a>
    </p>
</div>