@model IEnumerable<Listing>

<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 100%;
    }

    .listing-box {
        border: 1px solid #ccc;
        margin: 1%;
        width: 20%;
        min-width: 200px;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s;
        cursor: pointer;
        border-radius: 10px;
    }

        .listing-box:hover {
            transform: scale(1.05);
        }

    .listing-image {
        flex: 1;
        overflow: hidden;
    }

        .listing-image img {
            width: 100%;
            object-fit: cover;
            height: 200px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

    .listing-details {
        padding: 10px;
        overflow: hidden;
    }

    /* Add CSS for the name, description, and price */
    .listing-name {
        font-weight: bold;
    }

    .listing-description {
        color: grey;
    }

    .listing-price {
        font-weight: bold;
    }

    .create-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
    }
</style>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<div class="container">
    @foreach (var listing in Model)
    {
        <div class="listing-box" onclick="location.href='@Url.Action("ListingView", "Listing", new { id = listing.ListingId })'">
            <div class="listing-image">
                <img src="@listing.ImageUrl" alt="Listing Image" class="img-fluid" />
            </div>
            <div class="listing-details">
                <div class="listing-name">
                    <a>@listing.Name</a>
                </div>
                <div class="listing-description">
                    <a>@listing.Description</a>
                </div>
                <div class="listing-price">
                   <a> @listing.Price.ToString("0.00 NOK")</a>
                </div>
                <div class="action-links">
                    <a asp-action="Update" asp-route-id="@listing.ListingId">Update</a>
                    <a asp-action="Delete" asp-route-id="@listing.ListingId">Delete</a>
                </div>
            </div>
        </div>
    }
    <p class="create-button">
        <a class="btn btn-secondary" asp-controller="Listing" asp-action="Create">Create new Listing</a>
    </p>
</div>