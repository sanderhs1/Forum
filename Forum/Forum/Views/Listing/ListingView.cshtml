@model Listing

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add custom CSS for the layout */
        .listing-container {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
        }

        .listing-image {
            max-width: 300px; /* Set the maximum image width */
            margin-right: 20px; /* Add spacing between image and details */
        }

        .listing-details {
            flex: 1; /* Allow the details section to take the remaining space */
        }

        .rent-button {
            text-align: right; /* Align the button to the right */
        }

        /* Ensure the text doesn't overlap with the image */
        h1, p {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="listing-container">
        <div class="listing-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        </div>
        <div class="listing-details">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <div class="rent-button">
                <h1>@Model.Price</h1>
                <a asp-controller="Rent" asp-action="CreateRentListing" asp-route-listingId="@Model.ListingId" class="btn btn-primary">Rent this listing</a>
            </div>
        </div>
    </div>
</body>
</html>



