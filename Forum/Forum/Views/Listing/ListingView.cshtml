@model Listing

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .listing-container {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
        }
        .listing-image {
            max-width: 300px; 
            margin-right: 20px; 
        }
        .listing-details {
            flex: 1; 
        }
        .rent-button {
            text-align: right; 
        }
        h1, p {
            margin: 0;
        }
    </style>
    <!--Adde en pris per natt kalkulator Informasjon etc-->
</head>
<body>
    <div class="listing-container">
        <div class="listing-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
            <img src="@Model.ImageUrl1" alt="@Model.Name" />
        </div>
        <div class="listing-details">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <div class="rent-button">
                <h1>@Model.Price</h1>
                <a asp-controller="Rent" asp-action="CreateRentListing" asp-route-listingId="@Model.ListingId" class="btn btn-primary">Rent this listing</a>
            </div>
        </div>
    </div>
</body>
</html>



