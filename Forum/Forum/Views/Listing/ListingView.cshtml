@model Listing
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles here */
        .img-thumbnail {
            max-width: 100%;
            height: auto;
            border: none;
            margin-bottom: 10px;
        }

        .listing-container {
            display: flex;
            gap: 20px;
        }

        .listing-image-container {
            flex: 2;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .listing-details {
            flex: 3;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .listing-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="listing-container row">
            <div class="listing-image-container col-md-7">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" />
                <img src="@Model.ImageUrl1" alt="@Model.Name" class="img-thumbnail" />
                <!-- Add more images as needed -->
            </div>
            <div class="listing-details col-md-5 bg-light">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>
                <!-- Render the Rent Form Partial -->
                @{
                    var rentVM = new CreateRentListingViewModel { RentListing = new RentListing { ListingId = Model.ListingId } };
                    await Html.RenderPartialAsync("_RentFormPartial", rentVM);
                }
                <div class="listing-footer">
                    <h3>@Model.Price</h3>
                    <a asp-controller="Rent" asp-action="CreateRentListing" asp-route-listingId="@Model.ListingId" asp-route-listingId="@Model.ListingId" class="btn btn-primary">Rent this listing</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



