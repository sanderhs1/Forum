@model ListingWithRentVM
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles here */
        .img-thumbnail {
            max-width: 100%;
            height: auto;
            border: none;
            margin-bottom: 10px;
        }

        .listing-container {
            display: flex;
            gap: 20px;
        }

        .listing-image-container {
            flex: 2;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .listing-details {
            flex: 3;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .listing-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="listing-container row">
            <div class="listing-image-container col-md-7">
                <img src="@Model.ListingDetails.ImageUrl" alt="@Model.ListingDetails.Name" class="img-thumbnail" />
                <img src="@Model.ListingDetails.ImageUrl1" alt="@Model.ListingDetails.Name" class="img-thumbnail" />
                <!-- Add more images as needed -->
            </div>

            <div class="listing-details col-md-5 bg-light">
                <partial name="_CreateRentListingPartial" model="@Model.RentDetails" />
                <h2>@Model.ListingDetails.Name</h2>
                <h1>Antall rom: @Model.ListingDetails.AntallRom</h1>
                <p>@Model.ListingDetails.Description</p>
                <div class="listing-footer">
                    <h3>@Model.ListingDetails.Price</h3>
                </div>
            </div>
        </div>
    </div>
</body>

</html>



