<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listing View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles here */
        .img-thumbnail {
            max-width: 100%;
            height: auto;
            border-radius: 0.25rem;
            margin-bottom: 10px;
        }

        .listing-container {
            display: flex;
            gap: 20px;
        }

        .listing-image-container {
            flex: 2;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 10px;
        }

        .listing-details {
            flex: 3;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .details-header {
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

            .detail-item:last-child {
                margin-bottom: 0;
            }

        .detail-title {
            font-weight: 500;
        }

        .listing-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .btn-rent {
            text-transform: uppercase;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="listing-container row">
            <div class="listing-image-container col-md-7">
                <img src="@(Model.ListingDetails?.ImageUrl)" alt="@(Model.ListingDetails?.Name)" class="img-thumbnail" />
                <img src="@(Model.ListingDetails?.ImageUrl1)" alt="@(Model.ListingDetails?.Name)" class="img-thumbnail" />
                <!-- Add more images as needed -->
            </div>

            <div class="listing-details col-md-5">
                <div class="details-header">
                    <h2>@Model.ListingDetails?.Name</h2>
                    <h4>Antall rom: @Model.ListingDetails?.AntallRom</h4>
                </div>

                <partial name="_CreateRentListingPartial" model="@Model.RentDetails" />

                <p>@Model.ListingDetails?.Description</p>

                <div class="detail-item">
                    <span class="detail-title">Bad:</span>
                    <span>@Model.ListingDetails?.Bad</span>
                </div>

                <div class="detail-item">
                    <span class="detail-title">Area:</span>
                    <span>@Model.ListingDetails?.Area m²</span>
                </div>

                <div class="detail-item">
                    <span class="detail-title">Floor:</span>
                    <span>@Model.ListingDetails?.Floor</span>
                </div>

                <div class="detail-item">
                    <span class="detail-title">Parking Spots:</span>
                    <span>@Model.ListingDetails?.Spots</span>
                </div>

                <div class="detail-item">
                    <span class="detail-title">Adresse:</span>
                    <span>@Model.ListingDetails?.Adresse</span>
                </div>

                <div class="listing-footer">
                    <span class="detail-title">Price per night:</span>
                    <h3>@Model.ListingDetails?.Price</h3>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



